{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "store:default",
    "dialog:default",
    "store:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            {
              "validator": "\\S+"
            }
          ],
          "name": "binaries/ffmpeg",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open"
  ]
}
